# Parâmetros do e-mail
$sendMailMessageSplat = @{
    From       = 'seu_email@gmail.com'  # Seu endereço de e-mail Gmail
    To         = 'destinatario@gmail.com'  # Endereço do destinatário
    Subject    = 'Assunto do e-mail'
    Body       = 'Corpo do e-mail automático'
    SmtpServer = 'smtp.gmail.com'
    Port       = 587
    UseSsl     = $true
    Credential = (New-Object -TypeName System.Management.Automation.PSCredential -ArgumentList "seu_email@gmail.com", (ConvertTo-SecureString "SENHA_DO_APLICATIVO" -AsPlainText -Force))
}

# Enviar o e-mail
try {
    Send-MailMessage @sendMailMessageSplat
    Write-Output "E-mail enviado com sucesso."
} catch {
    Write-Output "Falha no envio do e-mail: $_"
}




